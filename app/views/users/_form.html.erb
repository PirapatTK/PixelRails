<turbo-frame id="user_form" data-controller="user-form">
  <%= form_with model: user, url: user.persisted? ? user_path(user) : users_path, method: user.persisted? ? :patch : :post, local: true, class: 'container' do |f| %>
    <div class="flex-row-between">
      <h1><%= user.persisted? ? 'Edit User' : 'Register Form' %></h1>
      <button class="btn-close" type="button" data-action="user-form#toggle" data-user-form-target="toggleButton">Hide</button>
    </div>
    <div class="flex-col-start" data-user-form-target="form">
      <div class="flex-row-center gap-xl">
        <div class="field">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, required: true %>
        </div>
        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, required: true %>
        </div>
      </div>
      <div class="flex-row-center gap-xl">
        <div class="field">
          <%= f.label :birth_date %>
          <%= f.date_field :birth_date, required: true %>
        </div>
        <div class="field">
          <%= f.label :gender %>
          <div class="radio-group">
            <%= f.radio_button :gender, 'male', id: 'gender_male', required: true %>
            <%= f.label :gender_male, 'Male' %>
            <%= f.radio_button :gender, 'female', id: 'gender_female' %>
            <%= f.label :gender_female, 'Female' %>
          </div>
        </div>
      </div>
      <div class="flex-row-center gap-xl">
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, required: true %>
        </div>
        <div class="field">
          <%= f.label :phone_number %>
          <%= f.telephone_field :phone_number, required: true %>
        </div>
      </div>
      <div class="field">
        <%= f.label :subject %>
        <%= f.select :subject, @categories.drop(1), { prompt: 'Select a subject' }, required: true %>
      </div>
      <%= f.submit user.persisted? ? 'Update' : 'Submit', class: 'btn-primary mt-xl' %>
    </div>
  <% end %>
</turbo-frame>